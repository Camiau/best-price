@{
    ViewData["Title"] = "About";
}
<head>
    <link rel="stylesheet" href="/css/price.css">
</head>
<h2>@ViewData["Title"]</h2>
<h1>@ViewData["Message"]</h1>
<div class="container row">
    <div class="col-md-3">
        <h4>@ViewData["nameProduct"]</h4>
        <h6>@ViewData["brand"]</h6>
        <img src=@ViewData["srcImg"] width="200px" height="200px">
    </div>
    <form method="POST"action="/Price/PriceSucces" class="col-md-5">
            <h4>Ingrese el precio</h4>
            <input type="number"step="0.01" name="PriceEffective">
            <h4>Ingrese el dia de carga</h4>
            <input type="date" name="Date">
            <h4>Ingrese la latitud del sitio de carga</h4>
            <input type="text" name="Latitude">
            <h4>Ingrese la longitud del sitio de carga</h4>
            <input type="text" name="Longitude">
            <div>    
                <button id="submitPrice">Cargar Precio</button>
            </div>
    </form>
</div>