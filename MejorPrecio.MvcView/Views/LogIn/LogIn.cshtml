@model MejorPrecio.MvcView.Models.LogInViewModel
<head>
    <link rel="stylesheet" href="/css/Login.css">
</head>
@if (!ViewData.ModelState.IsValid) {
    <div class="error"><h6 class="errorLogin">Hubo un error</h6></div>
    foreach (var state in ViewData.ModelState.Values) {
        foreach (var error in state.Errors) {
            <div class="errorLogin">@error.ErrorMessage</div>
            @if(@error.ErrorMessage=="Se requiere verificacion del Email")
            {
                <h6 class="errorMailLabel">Para volver a enviar el mail, por favor haga click aqui:</h6>
                <input type="submit" value="Enviar Email" class="errorEmailButton" name="checkEmails" /><br/>
            }
        } 
    }
}
<form method="POST">
        @if(Model.Dni==null)
                {
                   <h4>Dni:</h4> <input type="text" name="Dni"/><br>
                }
                else
                {
                  <h4>Dni:</h4> <input type="text" name="Dni" value="@Model.Dni" /><br>
                }
        @if(Model.Email==null)
                {
                    <h4>Email:</h4> <input type="email" name="email" /><br />
                }
                else
                {
                    <h4>Email:</h4> <input type="email" name="email" value="@Model.Email" /><br />
                }
    <input type="submit" value="Login" name="LogIn" /><br/>
